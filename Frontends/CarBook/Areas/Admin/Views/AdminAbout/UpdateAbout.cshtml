@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Hakkımızda Ekle</h4>
                        <p class="card-subtitle mb-4">
                            Aşağıdaki formu kullanarak sistemd ki hakkımızda verisini güncelleyebilirsiniz.
                        </p>

                        <form method="post">
                            <input type="hidden" asp-for="aboutId" />
                            <div class="form-group">
                                <label for="exampleInputtitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputtitle" asp-for="title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputdescription">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputimageUrl">Resim Url</label>
                                <input type="text" class="form-control" id="exampleInputimageUrl" asp-for="imageUrl">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
