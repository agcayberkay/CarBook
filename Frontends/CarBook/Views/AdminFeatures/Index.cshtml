
@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Özellik Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Bu panelde sisteme kayıtlı tüm araçların özelliklerine ulaşabilirsiniz.
                            Araç için yeni özellik ekleme , güncelleme ve silme işlemlerinizi
                            buradan kolayca yönetebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Özellik</th>
                                        <th>Sil </th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td><a href="/AdminFeatures/RemoveFeature/@item.FeatureId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/AdminFeatures/UpdateFeature/@item.FeatureId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a href="/AdminFeatures/CreateFeature" class="btn btn-outline-primary">Yeni Özellik Ekle</a>
                        </div>

                    </div>

                </div>

            </div>

        </div>
    </div>


