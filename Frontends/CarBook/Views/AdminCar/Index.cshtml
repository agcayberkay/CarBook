@model List<ResultCarWithBrandsDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Bu panelde sisteme kayıtlı tüm araçların bilgilerine ulaşabilirsiniz.
                            Araç marka, model, plaka ve kullanıcı bilgilerini detaylı
                            olarak görüntüleyerek filonuzu kolayca yönetin.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Km</th>
                                        <th>Vites Türü</th>
                                        <th>Koltuk Sayısı</th>
                                        <th>Kapı</th>
                                        <th>Yakıt Tipi</th>
                                        <th>Sil </th>
                                        <th>Güncelle</th>
                                        <th>Detaylar</th>
                                        <th>Sitede Gör</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.BrandName</td>
                                            <td>@item.Model</td>
                                            <td>@item.Km</td>
                                            <td>@item.Transmission</td>
                                            <td>@item.Seat</td>
                                            <td>@item.Luggage</td>
                                            <td>@item.Fuel</td>
                                            <td><a href="/AdminCar/RemoveCar/@item.CarId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/AdminCar/UpdateCar/@item.CarId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/CarList/CarDetail/@item.CarId" class="btn btn-outline-dark">Detaylar</a></td>
                                            <td><a href="/" class="btn btn-outline-warning">Sitede Gör</a></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a href="/AdminCar/CreateCar" class="btn btn-outline-primary">Araç Ekle</a>
                        </div>

                    </div>

                </div>

            </div>

        </div>
    </div>


